/* pages/index/module/chat.wxss */
page{
  height: 100%;
}
.chat{
  width: 100%;
  height: 100%;
  overflow-y:hidden;
}
view{
  font-size: 13px;
}
.search{
  width: 100%;
  padding: 5px;
  -webkit-box-sizing: border-box;
  vertical-align: middle;
  border-style: none;
  display: flex;
  align-items: center;
  box-shadow: 1px 5px 5px #ebedef;
}
.search input{
  width: 84%;
  border: 1px solid #e6e1e1;
  background: #e6e1e1;
  border-radius:5px; 
  padding: 5px;
  padding-left:40px; 
  margin: 0px auto;
}
.btnImg{
  width: 20px;
  height: 20px;
  position: absolute;
  left: 5%;
}
.panel{
  width: 100%;
  height: 40px;
  position: absolute;
  bottom: 0px;
}
.panel-item image{
  width: 25px;
  height: 25px;
  margin: 0px auto;
}
.panel-item{
  width: 25%;
  height: 100%;
  float: left;
  vertical-align: middle;
  border-style: none;
  display: flex;
  align-items: center
}
.menu{
  width:100%;
  height: calc( 100% - 40px );
}
.menu swiper{
  width: 100%;
  height: 100%;
}
.swiper_con{
  height: 100%;
}
.wallpaper{
  width: 100%;
  height: 260px;
}
.tool-menu{
  width:100%;
  height: calc(100% - 260px);
  overflow-y:auto; 
  overflow-x:hidden; 

}
.wallpaperimage{
  width:100%;
  height: 220px;
}
.userinfo-avatar {
  border: 2px solid white;
  position: absolute;
  right: 15px;
  top: 180px;
  width: 130rpx;
  height: 130rpx;
  margin: 20rpx;
  border-radius: 50%;
  
}
ul{
  height: 100%;
}
ul li{
  float: left;
  padding-top: 20px;
  padding-left: 20px;
  width: 80%;
  margin: 0px auto;
  margin-left: 6%;

}

.recommond{
  background: #ebedef;
  width: 100%;
  height: calc( 100% - 49px);
  overflow-x:hidden;
  overflow-y:auto;  
}
.vir-line{
  width: 100%;
  height: 340px;
}
.rec-item{
  width: 45%;
  height: 340px;
  border-radius: 8px;
  float: left;
  margin-left:3%;
  margin-top: 3%;
  background: white;
}
.p-information{
  width: 100%;
  height: calc(100% - 70px);
}
.information{
  width: 100%;
  height: 30px;
  font-size: 10px;
  color: #707273;
  padding: 5px;
  -webkit-box-sizing: border-box;
}
.p-information image{
  border-radius:8px; 
  width: 100%;
  height: 100%;
}
.mesg{
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.information-menu{
  position: relative;
  width: 100%;
  height: 40px;
  vertical-align: middle;
  border-style: none;
  display: flex;
  align-items: center;
  font-size: 8px;
  text-align: center;
}
.userinfo-user{
  width: 20px;
  height: 20px;
  border-radius:50px; 
  margin-left: 5%;
}
.userinfo-love{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 10px;
}
.user-name{
  display: -webkit-box;
  overflow: hidden;
  width: 40%;
  margin-left: 5px;
}
.nickname{
  width: 50px;
  height: 50px;
  position: absolute;
  right: 50px;
  top:50px;
  color: white;
}